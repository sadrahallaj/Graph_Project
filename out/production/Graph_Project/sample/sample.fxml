<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.Pane?>

<?import javafx.scene.text.Font?>
<BorderPane xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
    <top>
        <Label alignment="CENTER" prefWidth="112" text="Menu" BorderPane.alignment="TOP_RIGHT" >
            <font>
                    <Font name = "Times New Roman bold" size = "40"/>
            </font>
        </Label>
    </top>
    <right>
        <GridPane alignment="TOP_RIGHT" hgap="10 " style="-fx-border-color: blue ; -fx-arc-height: 5 ; -fx-background-color: #6bcc0d" vgap="10">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>
            <Button fx:id="btnNewNode" onAction="#btnNewNodeClicked" prefWidth="90" text="new node" GridPane.columnIndex="0" GridPane.rowIndex="5" />
            <Button fx:id="btnNewLine" onMouseClicked="#newLineclicked" prefWidth="90" text="new line" GridPane.columnIndex="0" GridPane.rowIndex="6" />
            <Button fx:id="btnFinish" onMouseClicked="#Finishclicked" prefWidth="90" text="finish" GridPane.columnIndex="0" GridPane.rowIndex="7" />
            <Button fx:id="btnBfs" onMouseClicked="#bfsclicked" prefWidth="90" text="bfs" visible="false" GridPane.columnIndex="0" GridPane.rowIndex="15" />
            <Button fx:id="btnDfs" onMouseClicked="#dfsclicked" prefWidth="90" text="dfs" visible="false" GridPane.columnIndex="0" GridPane.rowIndex="16" />
        </GridPane>
    </right>
   <center>
      <Pane fx:id="customPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="700.0" prefWidth="700.0" style="-fx-border-color: red ; -fx-background-color: white" BorderPane.alignment="CENTER" />
   </center>
</BorderPane>


